package dam.main;

import java.util.Scanner;

import dam.model.Banio;
import dam.model.Estancia;

public class GestionArq {

	private static final String[] MENU_PRINC = {"Introduce:", "1 - Para añadir una estancia", 
			"2 - Para mostrar las estancias de la casa y los m2", "3 - Para salir del programa"};
	private static final String[] MENU_EST = {"Introduce:", "1 - Para agregar un baño", "2 - Para agregar una cocina", 
												"3 - Para agregar una Habitacion", "4 - Para agregar un Hall", "5 - Para agregar un salón"};
	
	static Scanner sc;

	public static void main(String[] args) {
		int num = -1;
		sc = new Scanner(System.in);
		
		while (num != 3) {
			
			for (int i = 0; i < MENU_PRINC.length; i++) {
				System.out.println(MENU_PRINC[i]);
			}
			
			num = solicitarNumeroRango(1, 3, "");
			
			switch (num) {
			case 1:
				solicitarEstancia();
				break;

			case 2:
				
				break;
			}
			
		}
		
		System.out.println("** FINALIZANDO EL PROGRAMA **");
		
		sc.close();

	}

	private static void solicitarEstancia() {
		int num = 0;
		Estancia estancia;
		String nombre = "";
		int metrosCuad = 0;
		int numPuertas = 0;
		int numVentanas = 0;
		
		for (int i = 0; i < MENU_EST.length; i++) {
			System.out.println(MENU_EST[i]);
		}
		
		num = solicitarNumeroRango(1, 5, "");
		
		switch (num) {
		case 1:
			boolean ducha = false;
			boolean banera = true;
			
			System.out.println("Introduce el nombre de la estancia");
			metrosCuad = solicitarNumeroRango(0, 10000, "Introduce los metros cuadrados de la estancia");
			numPuertas = solicitarNumeroRango(0, 100, "Introduuce el número de puertas");
			numVentanas = solicitarNumeroRango(0, 100, "Introduuce el número de puertas");
			
			solicitarBoolean("¿Dispone de ducha?");
			
			estancia = new Banio(nombre, metrosCuad, numPuertas, numVentanas, ducha, banera);
			break;
		case 2:
				
			break;
					
		case 3:
			
			break;
			
		case 4:
			
			break;
		
		case 5:
			
			break;
		}
		
	}

	private static boolean solicitarBoolean(String msg) {
		Boolean caso = false;
		String resp = "";
		
		while (resp.isEmpty() || resp.equalsIgnoreCase("SI") || resp.equalsIgnoreCase("NO")) {
			System.out.println(msg);
		}
	}

	private static int solicitarNumeroRango(int min, int max, String msg) {
		int num = 0;
		boolean valNoVal = true;
		
		while (valNoVal) {
			try {
				if (!msg.isEmpty()) {
					System.out.println(msg);
				}
				num = Integer.parseInt(sc.nextLine());
				
				if (num < min || num > max) {
					throw new NumberFormatException();
				} else {
					valNoVal = false;
				}
			} catch (NumberFormatException e) {
				System.out.println("Introduce un número entero comprendido entre {" + min + ", " + max + "}");
			}
		}
		
		return num;
	}

}
